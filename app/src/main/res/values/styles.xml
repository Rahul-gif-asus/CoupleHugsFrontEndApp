<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.CoupleHugsFrontend" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/pink_gradient_start</item>
        <item name="colorPrimaryDark">@color/pink_gradient_end</item>
        <item name="colorPrimaryVariant">@color/pink_gradient_end</item>
        <item name="colorAccent">@color/ellipse_4_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/ellipse_4_color</item>
        <item name="colorSecondaryVariant">@color/ellipse_5_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Customize your theme here -->
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Splash screen theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/loading_background</item>
    </style>

    <!-- Figma export styles -->
    <style name="BG__Sign_In" parent="android:Widget">
        <item name="android:background">@drawable/_bg__sign_in_shape</item>
    </style>
    <style name="Ellipse_5" parent="android:Widget">
        <item name="android:background">@drawable/ellipse_5_shape</item>
    </style>
    <style name="Ellipse_4" parent="android:Widget">
        <item name="android:background">@drawable/ellipse_4_shape</item>
    </style>
    <style name="Line_4" parent="android:Widget">
        <item name="android:background">@drawable/line_4_shape</item>
    </style>
    <style name="Line_3" parent="android:Widget">
        <item name="android:background">@drawable/line_3_shape</item>
    </style>
    <style name="Rectangle_1" parent="android:Widget">
        <item name="android:background">@drawable/rectangle_1</item>
    </style>
</resources>
