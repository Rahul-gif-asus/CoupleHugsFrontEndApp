            <ImageView
                android:id="@+id/rectangle_1"
                android:layout_width="500dp"
                android:layout_height="match_parent"
                android:layout_marginStart="-20dp"
                android:layout_marginTop="0dp"
                android:contentDescription="rectangle_1"
                android:src="@drawable/rectangle_1" />

            <RelativeLayout
                android:id="@+id/frame_6"
                android:layout_marginTop="269dp"
                android:layout_marginStart="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/input_default"
                    android:layout_marginTop="15.5dp"
                    android:layout_marginStart="25.5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/email"
                        android:fontFamily="Poppins"
                        android:layout_gravity="center_horizontal|center"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="@color/email_color"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="16dp"
                        android:layout_width="57dp"
                        android:layout_height="33.5dp"
                        android:text="@string/email_string" />

                </RelativeLayout>

                <RelativeLayout
