                android:layout_marginTop="176dp"
                android:layout_width="241dp"
                android:layout_height="150dp" />

            <ImageView
                android:id="@+id/enlarge_untitled_logo_2_free_file_removebg_1"
                android:src="@drawable/enlarge_untitled_logo_2_free_file_removebg_1"
                android:contentDescription="enlarge_untitled_logo_2_free_file_removebg_1"
                android:layout_marginStart="56dp"
                android:layout_marginTop="59dp"
